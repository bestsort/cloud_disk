<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bestsort.cloud_disk.dao.ShareMapDao">

    <resultMap type="cn.bestsort.cloud_disk.model.entity.ShareMap" id="ShareMapMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="shareId" column="share_id" jdbcType="INTEGER"/>
        <result property="fileId" column="file_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ShareMapMap">
        select
          id, share_id, file_id
        from bbs_lite.share_map
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ShareMapMap">
        select
          id, share_id, file_id
        from bbs_lite.share_map
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ShareMapMap">
        select
          id, share_id, file_id
        from bbs_lite.share_map
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="shareId != null">
                and share_id = #{shareId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into bbs_lite.share_map(share_id, file_id)
        values (#{shareId}, #{fileId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update bbs_lite.share_map
        <set>
            <if test="shareId != null">
                share_id = #{shareId},
            </if>
            <if test="fileId != null">
                file_id = #{fileId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from bbs_lite.share_map where id = #{id}
    </delete>

</mapper>